USER_DB_SERVER_PRIVATE_KEY_PATH="${USER_DB_SERVER_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}.pem"
USER_DB_SERVER_CSR_FILE_PATH="${USER_DB_SERVER_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}.csr"
USER_DB_SERVER_CERT_FILE_PATH="${USER_DB_SERVER_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}.crt"
USER_DB_SERVER_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/${USER_DB_SERVICE_NAME}.crt"
USER_DB_SERVER_SELF_SIGNED_CERT_PATH="${PUBLIC_CERT_PATH}/${USER_DB_SERVICE_NAME}_self_signed.crt"
USER_DB_SERVER_SELF_SIGNED_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/${USER_DB_SERVICE_NAME}_self_signed.crt"

USER_DB_CLIENT_KEY_CNF_FILE_PATH="${CLIENT_KEY_CNF_PATH}/${USER_DB_SERVICE_NAME}.cnf"
USER_DB_CLIENT_CRYPTO_PATH="${CLIENT_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}"
USER_DB_CLIENT_PRIVATE_KEY_PATH="${USER_DB_CLIENT_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}.pem"
USER_DB_CLIENT_CSR_FILE_PATH="${USER_DB_CLIENT_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}.csr"
USER_DB_CLIENT_CERT_FILE_PATH="${USER_DB_CLIENT_CRYPTO_PATH}/${USER_DB_SERVICE_NAME}.crt"
USER_DB_CLIENT_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/${USER_DB_SERVICE_NAME}_client.crt"
USER_DB_CLIENT_SERVER_SIGNED_CERT_PATH="${PUBLIC_CERT_PATH}/${USER_DB_SERVICE_NAME}_server_signed.crt"
USER_DB_CLIENT_SERVER_SIGNED_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/${USER_DB_SERVICE_NAME}_server_signed.crt"

# VAULT의 중간 인증서 설정 파일 경로
VAULT_INTERMEDIATE_CA_CNF_FILE_PATH="${CA_KEY_CONF_PATH}/vaultInterCA.cnf"