INTER_CA2_CERT_FILE_PATH="${INTER_CA2_CRYPTO_PATH}/interCA2.crt"
INTER_CA2_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/interCA2.crt"
INTER_CA2_PUBLIC_CHAIN_CERT_PATH="${PUBLIC_CERT_PATH}/interCA2_chain.crt"

# Vault, User DB 서비스 이름 설정
VAULT_SERVICE_NAME="vault"
USER_DB_SERVICE_NAME="user_db"

# Vault 서비스 인증서 경로 설정
VAULT_SERVER_KEY_CNF_FILE_PATH="${SERVER_KEY_CNF_PATH}/${VAULT_SERVICE_NAME}.cnf"
VAULT_SERVER_CRYPTO_PATH="${SERVER_CRYPTO_PATH}/${VAULT_SERVICE_NAME}"
VAULT_SERVER_PRIVATE_KEY_PATH="${VAULT_SERVER_CRYPTO_PATH}/${VAULT_SERVICE_NAME}.pem"
VAULT_SERVER_CSR_FILE_PATH="${VAULT_SERVER_CRYPTO_PATH}/${VAULT_SERVICE_NAME}.csr"
VAULT_SERVER_CERT_FILE_PATH="${VAULT_SERVER_CRYPTO_PATH}/${VAULT_SERVICE_NAME}.crt"
VAULT_SERVER_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/${VAULT_SERVICE_NAME}.crt"
VAULT_SERVER_PUBLIC_CHAIN_CERT_PATH="${PUBLIC_CERT_PATH}/${VAULT_SERVICE_NAME}_chain.crt"
VAULT_SERVER_SELF_SIGNED_CERT_PATH="${PUBLIC_CERT_PATH}/${VAULT_SERVICE_NAME}_self_signed.crt"
VAULT_SERVER_SELF_SIGNED_PUBLIC_CERT_PATH="${PUBLIC_CERT_PATH}/${VAULT_SERVICE_NAME}_self_signed.crt"

VAULT_CLIENT_KEY_CNF_FILE_PATH="${CLIENT_KEY_CNF_PATH}/${VAULT_SERVICE_NAME}.cnf"
VAULT_CLIENT_CRYPTO_PATH="${CLIENT_CRYPTO_PATH}/${VAULT_SERVICE_NAME}"
VAULT_CLIENT_PRIVATE_KEY_PATH="${VAULT_CLIENT_CRYPTO_PATH}/${VAULT_SERVICE_NAME}.pem"
